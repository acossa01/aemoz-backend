# ========== CONFIGURAÇÃO DO SERVIDOR ==========
PORT=3000
NODE_ENV=development

# ========== BANCO DE DADOS ==========
# Para desenvolvimento local
DATABASE_URL=postgresql://username:password@localhost:5432/aemoz_db

# Para produção (exemplo Heroku/Railway)
# DATABASE_URL=postgresql://user:pass@host:5432/database?ssl=true

# Configurações individuais do banco (alternativa ao DATABASE_URL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=aemoz_db
DB_USER=aemoz_user
DB_PASS=sua_senha_segura

# ========== SEGURANÇA ==========
# Gere uma chave secreta forte: openssl rand -base64 64
JWT_SECRET=sua_chave_jwt_super_secreta_aqui_minimum_32_chars

# Senha do administrador
ADMIN_PASSWORD=aemoz2025

# ========== FRONTEND ==========
# URL do frontend para CORS
FRONTEND_URL=http://localhost:3001

# Para produção
# FRONTEND_URL=https://seu-dominio.com

# ========== HOSPEDAGEM ==========
# Configurações específicas para Railway
RAILWAY_STATIC_URL=https://aemoz-backend-production.up.railway.app

# Configurações específicas para Vercel
VERCEL_URL=https://aemoz-backend.vercel.app

# Configurações específicas para Heroku
HEROKU_APP_NAME=aemoz-backend

# ========== OPCIONAIS ==========
# Rate limiting (requisições por minuto)
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100
RATE_LIMIT_AUTH_MAX=5

# Tamanho máximo do payload JSON
MAX_JSON_SIZE=10mb

# Timeout para conexões do banco (ms)
DB_CONNECTION_TIMEOUT=2000
DB_IDLE_TIMEOUT=30000

# Log level
LOG_LEVEL=info

# ========== DESENVOLVIMENTO ==========
# Ativar logs detalhados
DEBUG=true

# ========== PRODUÇÃO ==========
# Para ambientes de produção, defina:
# NODE_ENV=production
# DEBUG=false
# Use senhas fortes e URLs HTTPS